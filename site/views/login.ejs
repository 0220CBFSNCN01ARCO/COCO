<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials\head.ejs %>
    <link rel="stylesheet" href="/stylesheets/login.css">
    <title>COCO | Login </title>
</head> 
<% include partials\header.ejs %> 
<body>
    
    <section class="container" id="princ">
        <div class="row">
        <div class="col-6">

        </div>

        <div class="col-6">
            <div id="error">
                <% if (typeof errors != "undefined") { %>  
                    <ul>
                        
                        <% for (let i = 0 ; i < errors.length ; i++) { %>
                            <li>
                                <%= errors[i].msg %>
                            </li>
                        <% } %>
                    </ul>
                <% } %>
            </div>
        </div>
        </div>
        
        <div class="row">
            <div class="col-6">

            </div>
            <div class="col-6">
            <form action="/users" method="POST">
                <div class="form-group">
                <label for="exampleInputEmail1"><strong>Email address</strong></label>
                <input type="email" class="form-control" id="exampleInputEmail1"  name="email">
                
                </div>
                <div class="form-group">
                <label for="exampleInputPassword1"><strong>Password</strong></label>
                <input type="password" class="form-control" id="exampleInputPassword1" aria-describedby="passHelp" name="password">
                <small id="passHelp" class="form-text text-muted"><strong>Never share your password with anyone else.</strong></small>
                </div>
                <label for=""><strong>Remember</strong></label>
                <input type="checkbox" name="remember">
                <input type="submit" class="btn btn-primary" value="Login"></input>
                <div id="createAccount">
                <a id="styleAccount" href="/users/register"><strong>Don't have account? Create one</strong></a>
                </div>
            </div>

        </div>
    </section>
    <% include partials\script.ejs %> 
      
</body>
    <% include partials\footer.ejs %> 
</html>